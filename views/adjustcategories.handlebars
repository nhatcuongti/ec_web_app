<form method="post">
    <div class="card">
        <div class = "card-header">
            <p class = "h2">Adjust New Category</p>
        </div>
        <div class="card-body">

            <div class="form-group row">
                <label for="category" class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="category" name = "CatName" value="Need repair here">
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <button class = "btn btn-outline-primary mr-3" type="submit">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Adjust
            </button>

            <a class="btn btn-outline-success" href="/" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                Return
            </a>
        </div>
    </div>
</form>

